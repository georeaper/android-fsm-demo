<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/viewHomeIndicator"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
       />

    <TextView
        android:id="@+id/tv_homeLeft_recyclerview"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@color/white"
        android:padding="5dp"
        android:text="Model :B650"
        android:textColor="@color/AppColor"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/LineaLayoutRightHome"
        app:layout_constraintStart_toEndOf="@id/viewHomeIndicator"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_homeRight_recyclerview"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:padding="5dp"
        android:text="Installation Date : 16/7/2023 "
        android:textColor="@color/AppColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_homeLeft_recyclerview"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/LinearLayoutLeftHome"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:gravity="center"
        android:layout_marginStart="8dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/viewHomeIndicator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_homeLeft_recyclerview"
        >

        <TextView

            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/titleHomeRvLeft"
            android:layout_marginStart="7dp"
            android:layout_marginTop="5dp"
            android:text="Customer Name"
            android:textColor="@color/AppColorText"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/rvChildLeftMain"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:text="Metropolitan"
            android:textColor="@color/black"
            android:textSize="19sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/LineaLayoutRightHome"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:padding="5dp"
        android:gravity="center"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/LinearLayoutLeftHome"
        app:layout_constraintTop_toBottomOf="@id/tv_homeRight_recyclerview">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/titleHomeRvRight"
            android:layout_marginStart="7dp"
            android:text="Serial Number"
            android:textColor="@color/AppColorText"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/rvChildRightMain"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:text="SN90781980WA"
            android:textColor="@color/black"
            android:textSize="19sp" />


    </LinearLayout>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerThickness="4dp"
        app:layout_constraintTop_toBottomOf="@+id/LineaLayoutRightHome"
        app:layout_constraintStart_toEndOf="@id/viewHomeIndicator"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>