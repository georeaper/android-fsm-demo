<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.WorkOrders.WorkOrdersFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background_primary_lightB">


        <LinearLayout
            android:id="@+id/searchContainer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/searchbar_shape"
            android:backgroundTint="@color/white"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <!-- Leading Icon (Search) -->
            <ImageView
                android:id="@+id/filterIcon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="0.1"
                android:layout_gravity="center"
                android:src="@drawable/filter_icon_updated"
                android:contentDescription="Filter Icon"
                />


            <!-- Search Text Input -->
            <EditText
                android:id="@+id/searchEditTextWorkOrder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:layout_margin="8dp"

                android:paddingStart="16dp"
                android:hint="Search..."
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:inputType="text" />

            <!-- Trailing Icon (Filter or Clear) -->
            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/search_icon"
                android:contentDescription="Search Icon"
                android:layout_margin="8dp"
                android:layout_weight="0.1"
                />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/workOrdersRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:padding="4dp"
            tools:listitem="@layout/list_workorders"/>

    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/workOrdersFloatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:clickable="true"
        android:contentDescription="@string/open"
        android:src="@android:drawable/ic_menu_add"/>



</FrameLayout>