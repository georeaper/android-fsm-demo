<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background_primary_lightB"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_primary_lightB"
        >

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/insert_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/insert_menu"
            app:navigationIcon="@drawable/appbar_cancel_insert"/>
<!--            app:title="ServiceHub"-->
<!--            app:subtitle="Home view-->
<!--"-->
<!--            app:subtitleTextColor="#0f517b"-->
<!--            app:titleTextColor="#0f517b"-->
<!--        />-->
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.8">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Selection"
                android:textSize="16sp"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_customer_case"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Metropolitan"
                android:textSize="14sp"
                android:textColor="@color/color_grey"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:orientation="vertical"
            android:layout_gravity="center">
            <ImageButton
                android:id="@+id/case_insert_customerselect_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/right_appbar_icon"
                android:background="@android:color/transparent"/>


        </LinearLayout>



    </LinearLayout>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/background_primary_lightB"
            android:hint="TC number">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/case_insert_casenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_primary_lightB"
                android:text="TC #2231s"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
            android:id="@+id/filledTextField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/background_primary_lightB"
            android:hint="Date recorded"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/case_insert_dateStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_primary_lightB"
                android:text="27/01/2025"
                />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
            android:id="@+id/technicas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/background_primary_lightB"
            android:hint="Priority"
            >

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/case_insert_priority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_primary_lightB"
                android:text="High"

                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
            android:id="@+id/filledTextField23"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/background_primary_lightB"
            android:hint="Date closed"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/case_insert_dateEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_primary_lightB"
                android:text="27/01/2026"
                />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.8">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equipment Selection"
                android:textSize="16sp"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_sn_case"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B5454 sn:Sf-3242342342"
                android:textSize="14sp"
                android:textColor="@color/color_grey"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:orientation="vertical"
            android:layout_gravity="center">
            <ImageButton
                android:id="@+id/case_insert_equipmentselect_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/right_appbar_icon"
                android:background="@android:color/transparent"/>


        </LinearLayout>



    </LinearLayout>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
            android:id="@+id/technicasTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/background_primary_lightB"
            android:hint="Title"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/case_insert_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_primary_lightB"
                android:text="Calibrating Flow"

                />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
            android:id="@+id/technicasDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/background_primary_lightB"
            android:hint="Description"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/case_insert_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_primary_lightB"
                android:gravity="top"
                android:lines="4"
                android:minLines="4"
                android:text="Testing Equipment , went really well , evertythong works like a clow , this is a test only page"

                />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/background_primary_lightB"
            android:hint="User"
            >

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/case_insert_select_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_primary_lightB"
                android:text="G.Kouvarakis"

                />

        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_gravity="center">
            <CheckBox
                android:id="@+id/case_insert_status"
                android:text="Status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/background_primary_lightB"
            android:hint="Notes"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/case_insert_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_primary_lightB"
                android:gravity="top"
                android:lines="4"
                android:minLines="4"
                android:text="Testing Equipment , went really well , evertythong works like a clow , this is a test only page"

                />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>


    </LinearLayout>

