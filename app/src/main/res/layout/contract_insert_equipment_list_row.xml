<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@drawable/list_items_round_corners"
android:layout_marginTop="8dp"
android:layout_marginBottom="8dp"
android:layout_marginEnd="8dp"
android:layout_marginStart="8dp"
android:orientation="horizontal">
<com.google.android.material.textview.MaterialTextView
    android:id="@+id/contract_insert_equipmentList_tvModel"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:textSize="16sp"
    android:padding="4dp"
    android:layout_marginEnd="2dp"
    android:text="model"
    android:layout_weight="0.4"
    android:textStyle="bold"
    android:gravity="center"
    />
<com.google.android.material.textview.MaterialTextView
    android:id="@+id/contract_insert_equipmentList_tvSerialNumber"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:textSize="16sp"
    android:text="sn"
    android:padding="4dp"
    android:layout_marginEnd="2dp"
    android:layout_weight="0.5"
    android:gravity="center"
    />
<com.google.android.material.textview.MaterialTextView
    android:id="@+id/contract_insert_equipmentList_tvVisits"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:textSize="16sp"
    android:text="2"
    android:padding="4dp"
    android:layout_marginEnd="2dp"
    android:layout_weight="0.2"
    android:gravity="center"
    />
</LinearLayout>
