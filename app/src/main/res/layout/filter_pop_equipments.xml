<!-- res/layout/fragment_equipment_filter_bottom_sheet.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:weightSum="3"
            android:orientation="horizontal">
            <Button
                android:id="@+id/equipmentCancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_weight=".5"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:textColor="@android:color/holo_blue_dark"
                />

            <TextView
                android:id="@+id/filterTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_weight="2"

                android:layout_gravity="center"
                android:gravity="center"/>



            <Button
                android:id="@+id/equipmentsApplyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Customer Selection Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:padding="16dp"
            android:weightSum="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customers"
                android:textSize="18sp"
                android:layout_weight="1.6"

                android:textColor="@android:color/black"
                android:layout_gravity="center"

                android:gravity="center_vertical"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/equipmentCustomerAll"
                android:layout_weight="0.4"
                android:text="All"
                android:textColor="@android:color/holo_blue_dark"
                android:background="@android:color/transparent"/>

        </LinearLayout>

        <ListView
            android:id="@+id/customerListView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:choiceMode="multipleChoice"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:listSelector="@android:color/transparent" />

        <!-- Equipment Category Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Equipment Category"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black" />

        <ListView
            android:id="@+id/equipmentCategoryListView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:choiceMode="multipleChoice"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:listSelector="@android:color/transparent" />

        <!-- Model Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Model"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black" />

        <ListView
            android:id="@+id/modelListView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:choiceMode="multipleChoice"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:listSelector="@android:color/transparent" />

        <!-- Manufacturer Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manufacturer"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black" />

        <ListView
            android:id="@+id/manufacturerListView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:choiceMode="multipleChoice"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:listSelector="@android:color/transparent" />

        <!-- Status Selection Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black" />

        <RadioGroup
            android:id="@+id/equipmentStatusRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/equipmentStatusAll"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="All" />

            <RadioButton
                android:id="@+id/equipmentStatusActive"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Active" />

            <RadioButton
                android:id="@+id/equipmentStatusDiscontinued"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Discontinued" />
        </RadioGroup>

    </LinearLayout>
</ScrollView>
