<resources>

    <!-- App theme -->
    <style name="AppTheme.NoActionBar" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- EditText without border -->
    <style name="EditTextNoBorder" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <!-- Rounded dialog -->
    <style name="RoundedDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Material3.RoundedDialog</item>
    </style>

    <!-- Shape appearance overlay for Material 3 -->
    <style name="ShapeAppearanceOverlay.Material3.RoundedDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>


    <!-- Custom buttons -->
    <style name="CustomApplyButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomClearButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.Material3.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
<!--        <item name="windowFullscreen">true</item>-->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>


</resources>
